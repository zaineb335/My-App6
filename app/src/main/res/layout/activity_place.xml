<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/numpl" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Bienvenue dans votre parking"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/nomp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="nom du parking"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/numplace"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Donner le numÃ¨ro de place"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="saisir le num de place"
        android:textAlignment="center"
        android:maxLines="1"
        android:inputType="number"
        android:id="@+id/edNom"/>

    <Button
        android:onClick="envoyer"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/suiv"
        android:text="verifier"/>


</LinearLayout>
